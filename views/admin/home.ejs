                            <img src="<%= flight.img %>" class="image">
                        </div>
                        <div class="col-2">
                            <p class="flight1"><strong><%= flight.airlinename %></strong></p>
                            <p>From: <%= flight.from %></p>
                        </div>
                        <div class="col-2">
                            <p class="flight">To:<span id="To"><%= flight.to %></span></p>
                        </div>
                        <div class="col-2">
                            <p class="flight">Date: <%= flight.date %></p>
                        </div>
                        <div class="col-2">
                            <p class="flight">Departure: <%= flight.departure %></p>
                        </div>
                        <div class="col-2">
                            <p class="flight">Price: <%= flight.price %></p>
                        </div>
                    </div> 
                    </div>
                </a>
            <% }); %>
            </div>

            <div id="sortp">
            <% flightp.forEach(function(flight){  %>
                    <a href="/Ainfo/<%= flight._id %>" class="flighta" >
                            <div class="flightbox">
                               <div class="row">
                                <div class="col-2">
                                    <img src="<%= flight.img %>" class="image">
                                </div>
                                <div class="col-2">
                                    <p class="flight1"><strong><%= flight.airlinename %></strong></p>
                                    <p>From: <%= flight.from %></p>
                                </div>
                                <div class="col-2">
                                    <p class="flight">To:<span id="To"><%= flight.to %></span></p>
                                </div>
                                <div class="col-2">
                                    <p class="flight">Date: <%= flight.date %></p>
                                </div>
                                <div class="col-2">
                                    <p class="flight">Departure: <%= flight.departure %></p>
                                </div>
                                <div class="col-2">
                                    <p class="flight">Price: <%= flight.price %></p>
                                </div>
                            </div> 
                            </div>
                    </a>
                <% }); %>
            </div>

        </div>
    </div>
<%- include('../partials/footer.ejs') %>